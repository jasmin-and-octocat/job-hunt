{
  "kind": "collectionType",
  "collectionName": "job_seeker_profiles",
  "info": {
    "singularName": "job-seeker-profile",
    "pluralName": "job-seeker-profiles",
    "displayName": "JobSeekerProfile",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "email": {
      "type": "email"
    },
    "phoneNumber": {
      "type": "string"
    },
    "profilePicture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "resume": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "linkedin": {
      "type": "string"
    },
    "github": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "bio": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "jobPreferences": {
      "type": "enumeration",
      "enum": [
        "remote",
        "on-site",
        "hybrid"
      ]
    },
    "salaryExpectations": {
      "type": "integer"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "job_seeker_profile"
    }
  }
